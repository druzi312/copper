<header id="cop-navbar" class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to image_tag("hc-logo.gif", alt: "Homeless Cop Logo"), root_path, id: "logo" %>
    
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Paintings", paintings_path %></li>
        <li><a id="aboutpull">About</a></li>
        <li><a id="jointhemailinglist">Join the mailing list</a></li>
        <li><%= link_to "Help", help_path %></li>
        <% if logged_in? %>
          
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Order Paintings", :controller => :paintings, :action => :order %></li>
              <li><%= link_to "Contacts from Website", contacts_path %></li>
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li><%= link_to "Users", users_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>

</header>