<% provide(:title, "Submit a Contact") %>

<h1><span style="float: left; padding-right: 5px;"><%= image_tag("eye.png") %></span>Contact</h1>

<script type="text/javascript">
  $( "#Contact-nav" ).css( "font-weight", "bold" );
</script>

<%= form_for(@contact) do |f| %>
  <ul>
  <% @contact.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>  
  <p>
    <%= f.label :message %><br />
    <%= f.text_area :message %>
  </p>
  <p style="text-align: center;">
    <%= f.submit id: "hc_sub", value: "Send" %>
  </p>
<% end %>

