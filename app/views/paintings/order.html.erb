<% provide(:title, 'Paintings Order') %>

<h1>Paintings Order: <i>Refresh</i></h1>

  <div id="art-index" class="container"> 

    <ul class="">
      <% @number = 0 %>
      <% @paintings.each do |painting| %>
      
          <li>        
            <%= link_to painting.title, painting_path(painting), 
            class: 'painting_title', 
            id: "painting_#{painting.id}" %> |
            <i><%= painting.body %></i>
            <span id= "cop-order_num_<%= painting.id %>" class="cop-order-info"><%= painting.ordering %></span>
            <br />
            Featured: <%= painting.painting_featured %>

            <% if current_user.admin? %>
              | <%= link_to "delete", painting, method: :delete, data: { confirm: "You sure?" } %>
            <% end %>            
            
            <%= form_for (painting), remote: true do |f| %>
              <p>
                <%= f.label :ordering %><br />
                <%= f.text_field :ordering %>
                <span style="float: right;"><%= f.submit %></span>
              </p>
            <% end %>

          </li>

       
      <% end %>
    </ul>

    <hr style="clear: both;"/>

    <h1>Comissions</h1>

    <ul class="">
      <% @numberNew = @number %>
      <% @paintings2.each do |painting| %>
      
          <li>        
            <%= link_to painting.title, painting_path(painting), 
            class: 'painting_title', 
            id: "painting_#{painting.id}" %> |
            <i><%= painting.body %></i>
            <span id= "cop-order_num_<%= painting.id %>" class="cop-order-info"><%= painting.ordering %></span>
            <br />
            Featured: <%= painting.painting_featured %>

            <% if current_user.admin? %>
              | <%= link_to "delete", painting, method: :delete, data: { confirm: "You sure?" } %>
            <% end %>            
            
            <%= form_for (painting), remote: true do |f| %>
              <p>
                <%= f.label :ordering %><br />
                <%= f.text_field :ordering %>
                <span style="float: right;"><%= f.submit %></span>
              </p>
            <% end %>
          </li>
      
      <% end %>
    </ul>

    <hr style="clear: both;"/>

    <p>
    <%= link_to "Create a New Painting", new_painting_path, class: "new_painting" %>
    </p>

</div>


