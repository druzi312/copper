<%= form_for(@painting, html: {multipart: true}) do |f| %>
  <ul>
  <% @painting.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <% if @painting.image.exists? %>

      <%= image_tag @painting.image.url(:thumb) %><br/>
  <% end %>

  <p>
    <%= f.label :image, "Attach an Image" %><br />
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>