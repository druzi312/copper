<%= form_for(@painting, html: {multipart: true}) do |f| %>
  <ul>
  <% @painting.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <% if @painting.image.exists? %>

      <%= image_tag @painting.image.url(:thumb) %><br/>
  <% end %>

  <p>
    <%= f.label :image, "Attach an Image" %><br />
    <%= f.file_field :image %>
  </p>

<p>
  <%= f.label :tag_list %><br />
  <%= f.text_field :tag_list %>
</p>

  <p>
    <%= f.label :ordering %><br />
    <%= f.text_field :ordering %>
  </p>

  <p>
    <%= f.label :painting_featured %>
    <%= f.check_box :painting_featured %>
  </p>

  <p>
    <%= f.label :painting_type %><br />
    <%= f.select :painting_type, [['Painting','Painting'],['Commissions','Commissions']] %>
  </p>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>